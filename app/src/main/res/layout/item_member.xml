<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_member"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="1dp"
    app:cardElevation="4dp"
    android:transitionName="card_member"
    android:foreground="?attr/selectableItemBackground"
    tools:targetApi="lollipop">

    <LinearLayout
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <com.example.kys_8.easymeetings.ui.view.CircleImageView
            android:id="@+id/avater_member"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/meeting_img3"
            app:border_width="2dp"
            app:border_color="@color/google_yellow"
            android:transitionName="avatar_info"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_member"
                android:text="李明"
                android:textSize="12dp"

                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>
